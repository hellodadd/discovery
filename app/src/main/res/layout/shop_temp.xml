<?xml version="1.0" encoding="utf-8"?>
<com.freeme.discovery.view.ContentTempleteView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/iconLayout"
    android:layout_width="190dp"
    android:layout_height="120dp"
    >



    <com.freeme.discovery.view.IconView
        android:id="@+id/iconview"
        android:layout_width="190dp"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/animg"
            android:layout_width="60dp"
            android:layout_height="61dp"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            android:src="@drawable/discovery_video_ani" />

        <RelativeLayout
            android:id="@+id/animLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="4dp"
            >

            <ImageView
                android:id="@+id/shop_h_ani_t"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/discovery_shop_ani_h" />

            <ImageView
                android:id="@+id/shop_h_ani_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/discovery_shop_ani_h" />

            <ImageView
                android:id="@+id/shop_v_ani_l"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/discovery_shop_ani_v" />

            <ImageView
                android:id="@+id/shop_v_ani_r"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="174dp"
                android:src="@drawable/discovery_shop_ani_v" />

            <ImageView
                android:id="@+id/icon_bg"
                android:layout_width="168dp"
                android:layout_height="65dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/discovery_shop_bg"/>

            <ImageView
                android:id="@+id/hot_app_icon"
                android:layout_width="165dp"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="4dp"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/discovery_ind_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/discovery_ind_line"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="22dp"/>

        <com.freeme.discovery.view.IndicatorTextView
            android:id="@+id/status_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:textSize="9sp"
            android:layout_marginTop="0dp"
            android:textColor="#00fdfa"
            android:text="xxxxxxxxx"
            />

        <TextView
            android:id="@+id/hot_app_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00fdfa"
            android:lines="2"
            android:textSize="@dimen/c_sp12"
            android:layout_marginTop="88dp"
            android:layout_marginLeft="4dp"
            android:textStyle="italic"
            />

    </com.freeme.discovery.view.IconView>




</com.freeme.discovery.view.ContentTempleteView>