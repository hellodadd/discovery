<?xml version="1.0" encoding="utf-8"?>
<com.freeme.discovery.view.IconView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/iconLayout"
    android:layout_width="120dp"
    android:layout_height="120dp"
    >

    
    <ImageView
        android:id="@+id/animg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:background="@drawable/discovery_radar_lock_on"
        />

    <ImageView
        android:id="@+id/hot_app_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerInside"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/hot_app_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="2dp"
        />

</com.freeme.discovery.view.IconView>